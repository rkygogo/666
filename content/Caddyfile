:{$PORT}
root * /usr/share/caddy
file_server browse

tls internal

header {
    Permissions-Policy interest-cohort=()
    Strict-Transport-Security max-age=31536000;
    X-Robots-Tag none
    X-Content-Type-Options nosniff
    X-XSS-Protection "1; mode=block;"
    X-Frame-Options DENY
    Referrer-Policy no-referrer-when-downgrade
    -Server
    -Hidden
}

basicauth /$UUID/* {
    $UUID $MYUUID-HASH
}

@websockets-vl {
        header Connection *Upgrade*
        header Upgrade websocket
        path /{$UUID}-vl*
}
handle @websockets-vl {
        reverse_proxy * localhost:61079
}
@websockets-vm {
        header Connection *Upgrade*
        header Upgrade websocket
        path /{$UUID}-vm*
}
handle @websockets-vm {
        reverse_proxy * localhost:61080
}
@websockets-ss {
        header Connection *Upgrade*
        header Upgrade websocket
        path /{$UUID}-ss*
}
handle @websockets-ss {
        reverse_proxy * localhost:61081
}
@websockets-tr {
        header Connection *Upgrade*
        header Upgrade websocket
        path /{$UUID}-tr*
}
handle @websockets-tr {
        reverse_proxy * localhost:61082
}

handle {
        reverse_proxy https://baidu.com {     
            trusted_proxies 0.0.0.0/0
            header_up Host {upstream_hostport}
        }
